#CUSTOMIZE===============================================================
#zsh ps1 color changing
##https://stackoverflow.com/a/2534676/7402755
prompt_context() {
  if [[ "$USER" != "$DEFAULT_USER" || -n "$SSH_CLIENT" ]]; then
	  ## no username
	  # prompt_segment(){}
	  ## default color (white)
	  # prompt_segment black default "%(!.%{%F{yellow}%}.)${USER}@mac"
	  ## customizing prompt
	  prompt_segment black default "%(!.%{%F{yellow}%}.)%{$fg[white]%}%n@mac%{$reset_color%}"
  fi
}

